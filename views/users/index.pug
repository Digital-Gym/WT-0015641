html
  head
    title Dream Management
    link(rel='stylesheet', href='/css/users.css') 
    link(rel='icon', href='images/plov-icon.png')
  body
    div.top
        a(href="javascript:history.back()") Back
        h1 Dreams Management Page
        a(href='users/create') Add

    div.main
        ul(id='goalsList')


    div#editOverlay
        h2 Edit Goal
        form(id='editForm')
            label(for='editName') Name:
            input(type='text' id='editName' name='editName' required maxlength='50')
            label(for='editPrice') Price:
            input(type='number' id='editPrice' name='editPrice' required maxlength='100')
            button(class="send-data") Update

    script(src='/js/users.js')
